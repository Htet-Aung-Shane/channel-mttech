<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="mt_service_type_act" model="ir.actions.act_window">
			<field name="name">Service Type</field>
			<field name="res_model">mt.service.type</field>
			<field name="view_mode">tree,form</field>
		</record>
		<record id="mt_service_type_view_tree" model="ir.ui.view">
			<field name="name">mt.service.type.view.tree</field>
			<field name="model">mt.service.type</field>
			<field name="arch" type="xml">
				<tree string="Service Type">
                    <field name="name" />
                    <field name="color" widget="color_picker"/>
				</tree>
			</field>
		</record>
		<record id="mt_service_type_view_form" model="ir.ui.view">
			<field name="name">mt.service.type.view.form</field>
			<field name="model">mt.service.type</field>
			<field name="arch" type="xml">
				<form string="">
					<sheet>
						<group>
                            <group>
                                <field name="name" />
                                <field name="color" widget="color_picker"/>
                                <separator/>
                            </group>
						</group>
					</sheet>
				</form>
			</field>
		</record>
	</data>
</odoo>
