<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <record id="mt_movie_view_act" model="ir.actions.act_window">
            <field name="name">movie</field>
            <field name="res_model">mt.movie</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="mt_movie_view_tree" model="ir.ui.view">
            <field name="name">mt.movie.tree</field>
            <field name="model">mt.movie</field>
            <field name="arch" type="xml">
                <tree string="movie">
                    <field name="name" />
                </tree>
            </field>
        </record>
        <record id="mt_movie_view_form" model="ir.ui.view">
            <field name="name">mt.moview.view.form</field>
            <field name="model">mt.movie</field>
            <field name="arch" type="xml">
                <form string="">                    
                    <sheet>
                        <field name="image" widget="image" class="oe_avatar"/>
                        <group>
                            <group>
                                <field name="name" />
                                <field name="attachment" />
                                <field name="genre_ids" widget="many2many_tags" options="{'no_edit': True, 'no_create': True, 'no_open': True}" />
                                <field name="category_ids" widget="many2many_tags" options="{'no_edit': True, 'no_create': True, 'no_open': True}"/>
                                <field name="country_id" options="{'no_edit': True, 'no_create': True, 'no_open': True}"/>
                            </group>  
                            <group>
                                <field name="review" />
                            </group>                         
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>


</odoo>