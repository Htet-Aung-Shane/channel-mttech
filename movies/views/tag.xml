<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="mt_tag_view_act" model="ir.actions.act_window">
            <field name="name">Movie Type</field>
            <field name="res_model">mt.tag</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record id="mt_tag_view_tree" model="ir.ui.view">
            <field name="name">mt.tag.view.tree</field>
            <field name="model">mt.tag</field>
            <field name="arch" type="xml">
                <tree string="tag">
                    <field name="name" />                   
                </tree>
            </field>
        </record>
        <record id="mt_tag_view_form" model="ir.ui.view">
            <field name="name">mt.tag.view.form</field>
            <field name="model">mt.tag</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group name="name" string="string">
                                <field name="name" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>

</odoo>